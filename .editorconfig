# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

# The JSON files contain newlines inconsistently
[*.json]
indent_size = 2
insert_final_newline = ignore
